---
import Layout from "../layouts/Layout.astro";
---

<Layout showAside={false}>
    <div
        class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 bg-linear-to-b from-orange-500 to-yellow-500"
    >
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2
                class="text-center text-3xl font-bold leading-2 tracking-tight text-black text-shadow-lg text-shadow-red-600"
            >
                Bienvenid@s a I Found You
            </h2>
            <h2
                class="mt-10 text-center text-xl font-semibold leading-4 tracking-tight text-black text-shadow-lg text-shadow-yellow-400"
            >
                Inicia sesión en tu cuenta ahora
            </h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" action="/api/auth/login" method="POST">
                <div>
                    <label
                        for="email"
                        class="block text-sm font-semibold leading-6 text-black"
                        >Correo electrónico</label
                    >
                    <div class="mt-2">
                        <input
                            id="email"
                            name="email"
                            type="email"
                            autocomplete="email"
                            required
                            class="block w-full rounded-md border-0 py-1.5 bg-amber-50 text-black ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6 px-3 shadow-lg shadow-black/50"
                        />
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label
                            for="password"
                            class="block text-sm font-medium leading-6 text-black"
                            >Contraseña</label
                        >
                    </div>
                    <div class="mt-2">
                        <input
                            id="password"
                            name="password"
                            type="password"
                            autocomplete="current-password"
                            required
                            class="block w-full rounded-md border-0 py-1.5 bg-white text-black ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6 px-3 shadow-lg shadow-black/50"
                        />
                    </div>
                </div>

                <div>
                    <button
                        type="submit"
                        class="flex w-full justify-center rounded-md bg-yellow-400 px-3 py-1.5 font-semibold leading-6 text-black hover:text-white shadow-sm hover:bg-orange-500 hover:shadow-lg hover:shadow-orange-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600"
                        >Iniciar sesión</button
                    >
                </div>
            </form>
            <div>
                <p class="mt-10 text-center text-sm text-white">
                    ¿No tienes cuenta?
                    <a
                        href="/register"
                        class="font-semibold leading-6 text-black hover:text-red-600"
                        >Regístrate aquí</a
                    >
                </p>
            </div>
        </div>
    </div>
</Layout>
