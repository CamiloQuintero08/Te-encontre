---
import Layout from "../layouts/Layout.astro";
---

<Layout showAside={false}>
    <div
        class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 bg-linear-to-l from-blue-900 to-cyan-200 "
    >
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2
                class="mt-10 mb-5 text-center text-4xl font-bold bg-linear-to-r from-orange-500 to-yellow-500 bg-clip-text text-transparent"
            >
                Crea tu cuenta ahora
            </h2>
            <h3
                class="t-10 text-center text-xl font-semibold leading-4 tracking-tight text-black/80 text-shadow-lg text-shadow-white/50"
            >
                Y se parte de la familia <span
                    class="font-semibold text-blue-800 text-shadow-lg text-shadow-cyan-300"
                    >I found you</span
                >
            </h3>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" action="/api/auth/register" method="POST">
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium leading-6 text-black"
                        >Nombre completo</label
                    >
                    <div class="mt-2">
                        <input
                            id="name"
                            name="name"
                            type="text"
                            required
                            class="block w-full rounded-md border-0 py-1.5 bg-white text-black ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6 px-3 shadow-lg shadow-black/50"
                        />
                    </div>
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium leading-6 text-black"
                        >Correo electrónico</label
                    >
                    <div class="mt-2">
                        <input
                            id="email"
                            name="email"
                            type="email"
                            autocomplete="email"
                            required
                            class="block w-full rounded-md border-0 py-1.5 bg-white text-black ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6 px-3 shadow-lg shadow-black/50"
                        />
                    </div>
                </div>

                <div>
                    <label
                        for="password"
                        class="block text-sm font-medium leading-6 text-black"
                        >Contraseña</label
                    >
                    <div class="mt-2">
                        <input
                            id="password"
                            name="password"
                            type="password"
                            required
                            class="block w-full rounded-md border-0 py-1.5 bg-white text-black ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6 px-3 shadow-lg shadow-black/50"
                        />
                    </div>
                </div>

                <div>
                    <button
                        type="submit"
                        class="flex w-full justify-center rounded-md bg-yellow-500 px-3 py-1.5 font-semibold leading-6 text-black shadow-sm hover:bg-orange-500 hover:text-white hover:shadow-lg hover:shadow-orange-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                        >Registrarse</button
                    >
                </div>
            </form>

            <p class="mt-10 text-center text-sm text-white">
                ¿Ya tienes cuenta?
                <a
                    href="/login"
                    class="font-semibold leading-6 text-black hover:text-red-600 hover:underline hover:decoration-red-600"
                    >Inicia sesión ahora!</a
                >
            </p>
        </div>
    </div>
</Layout>
